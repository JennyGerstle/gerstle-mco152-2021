<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane fx:controller="gerstle.physics.RocketController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets top="25" right="25" bottom="10" left="25"/>
    </padding>
    <Label text="Velocity:"
           GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="velocityField"
            GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="Angle:"
           GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="angleField"
            GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Seconds:"
           GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="secondsField"
            GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Button text="Calculate" onAction="#calculateRocket"
            GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label fx:id="TotalFlightTime"
        GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="totalFlightTimeAns" text=""
               GridPane.columnIndex="1" GridPane.rowIndex="4"/>

</GridPane>
